<Window x:Class="MusicCatallogApp.GUI.AdminWindow.UpdateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicCatallogApp.GUI.AdminWindow"
        mc:Ignorable="d"
        Title="Update User" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10" Background="#FFDCA47C">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Block User:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" FontWeight="Bold"/>
        <RadioButton x:Name="rbBlock" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>

        <Button x:Name="btnSave" Grid.Row="1" Grid.ColumnSpan="2" Content="Save" Width="100" Height="30" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnSave_Click" FontWeight="Bold" Background="#FF698474"/>

    </Grid>
</Window>
